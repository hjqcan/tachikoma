{
  "name": "@tachikoma/cli",
  "version": "0.1.0",
  "description": "Tachikoma 命令行工具",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tachikoma": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && bun build ./src/cli.ts --outdir ./dist --target bun",
    "build:types": "tsc -p tsconfig.build.json",
    "dev": "bun --watch src/cli.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "@tachikoma/core": "workspace:*"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "tachikoma",
    "cli",
    "command-line"
  ],
  "license": "MIT"
}
